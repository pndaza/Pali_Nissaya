<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="mm.pndaza.palitawnissaya"
    android:installLocation="preferExternal">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="mm.pndaza.palitawnissaya.activity.SplashScreenActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="mm.pndaza.palitawnissaya.activity.MainActivity"/>
        <activity android:name="mm.pndaza.palitawnissaya.activity.PageSelectActivity"/>
        <activity android:name="mm.pndaza.palitawnissaya.activity.NsySelectActivity">
            <intent-filter>
                <action android:name="mm.pndaza.palitawnissaya.NsySelectActivity"/>
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name="mm.pndaza.palitawnissaya.activity.BookReaderActivity"/>
    </application>

</manifest>